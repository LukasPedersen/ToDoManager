@page
@model CRUDExample.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">What to do</th>
            <th scope="col">Done?</th>
            <th scope="col">Date created</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Todo.Id)
            </td>
            <td>
                @Html.DisplayFor(model => model.Todo.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.Todo.WhatToDo)
            </td>
            <td>
                <input type="checkbox" class="checkbox" onclick="return false" checked="@Model.Todo.IsCompleted" />
            <td>
                @Html.DisplayFor(model => model.Todo.DateCreated)
            </td>
        </tr>
    </tbody>
</table>
<div>
    <form method="post">
        <input type="hidden" asp-for="Todo.Id" />
        <input type="submit" value="Delete" class="btn btn-sm btn-danger" /> |
        <a class="btn btn-sm btn-dark" asp-page="Index">Back to List</a>
    </form>
</div>
